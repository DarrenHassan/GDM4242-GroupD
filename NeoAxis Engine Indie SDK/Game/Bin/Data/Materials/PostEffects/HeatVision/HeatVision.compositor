compositor HeatVision
{
	technique
	{
		// texture size will be changed from code
		texture scene 1 1 PF_R8G8B8
		texture temp 1 1 PF_R8G8B8

		target scene
		{
			input previous
		}

		target temp
		{
			input none
			pass render_quad
			{
				material Compositor/HeatVision/LightToHeat
				input 0 scene
				identifier 123
			}
		}

		target_output
		{
			input none

			pass render_quad
			{
				material Compositor/HeatVision/Blur
				input 0 temp
			}
		}
	}
}
